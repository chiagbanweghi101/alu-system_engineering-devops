#!/usr/bin/env bash
#create an RSA keypair with passphrase and ensure the file exists after execution

# Generate the RSA key pair with a passphrase
ssh-keygen -b 4096 -f school -t rsa -N "betty" 

# Check if the private key file exists and print its contents
if [ -f "school" ]; then
    echo "The RSA private key 'school' exists."
    # Output the beginning of the private key file to verify its contents
    head -n 1 school
else
    echo "The RSA private key 'school' does not exist."
fi
